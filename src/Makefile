#******************************************************************************
# MAIN *
#******************************************************************************
COLLEEN = Colleen
GRACE = Grace
SULLY = Sully

#******************************************************************************
# DIRECTORIES *
#******************************************************************************
OBJ_DEP_DIR = obj_n_dep/

#******************************************************************************
# SOURCES, OBJECTS, HEADER & DEPENDENCIES *
#******************************************************************************
COLLEEN_SRC = Colleen.c
GRACE_SRC = Grace.c
SULLY_SRC = Sully.c

#******************************************************************************
# INSTRUCTIONS *
#******************************************************************************
CC = cc -g3
FLAGS = -Wall -Wextra -Werror -I

#******************************************************************************
# COLORS *
#******************************************************************************
RESET = \033[0m
ROSE = \033[1;38;5;225m
VIOLET = \033[1;38;5;55m
VERT = \033[1;38;5;85m
BLEU = \033[1;34m

#******************************************************************************
# COMPILATION *
#******************************************************************************

all: $(COLLEEN) $(GRACE) $(SULLY)
	@echo "$(ROSE)‚úì Tous les programmes sont compil√©s !$(RESET)"

$(COLLEEN): $(COLLEEN_SRC)
	@echo "$(BLEU)‚öô Compilation de $(COLLEEN)...$(RESET)"
	@$(CC) $(CFLAGS) $(COLLEEN_SRC) -o $(COLLEEN)
	@echo "$(ROSE)‚úì $(COLLEEN) cr√©√© avec succ√®s !$(RESET)"

$(GRACE): $(GRACE_SRC)
	@echo "$(BLEU)‚öô Compilation de $(GRACE)...$(RESET)"
	@$(CC) $(CFLAGS) $(GRACE_SRC) -o $(GRACE)
	@echo "$(ROSE)‚úì $(GRACE) cr√©√© avec succ√®s !$(RESET)"

$(SULLY): $(SULLY_SRC)
	@echo "$(BLEU)‚öô Compilation de $(SULLY)...$(RESET)"
	@$(CC) $(CFLAGS) $(SULLY_SRC) -o $(SULLY)
	@echo "$(ROSE)‚úì $(SULLY) cr√©√© avec succ√®s !$(RESET)"

clean:
	@echo "$(VIOLET)üßπ Nettoyage des fichiers temporaires...$(RESET)"
	@rm -rf *.o *_kid.c tmp/
	@echo "$(ROSE)‚úì Nettoyage termin√© !$(RESET)"

fclean: clean
	@echo "$(VERT)üóëÔ∏è  Suppression des ex√©cutables...$(RESET)"
	@rm -f $(COLLEEN) $(GRACE) $(SULLY)
	@rm -f Grace_kid.c Sully_*.c Sully_* tmp_colleen
	@echo "$(ROSE)‚úì Tout est propre !$(RESET)"

re: fclean all

.PHONY: all clean fclean re